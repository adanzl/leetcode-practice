{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc build dev",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${workspaceFolder}/out/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/out"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        }
    ]
}